{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2022",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "emitDecoratorMetadata": false,
    "module": "preserve",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/app/pages/*"],
      "@components": ["src/app/components"],
      "@components/*": ["src/app/components/*"],
      "@ui/components": ["src/shared/components"],
      "@common/utils": ["src/shared/utils"],
      "@common/pipes": ["src/shared/pipes"],
      "@common/constants": ["src/shared/constants"],
      "@common/guards": ["src/shared/guards"],
      "@common/types": ["src/shared/types"],
      "@common/services": ["src/shared/services"],
      "@ui/routes/*": ["src/app/routes/*"],
      "@ui/layouts/*": ["src/app/layouts/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
