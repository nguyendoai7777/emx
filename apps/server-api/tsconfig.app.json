{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "baseUrl": ".",
    "paths": {
      "@prisma-client": ["src/prisma"],
      "@decorators": ["src/shared/decorators"],
      "@filters": ["src/shared/filters"],
      "@interceptors": ["src/shared/interceptors"],
      "@types": ["src/shared/types"],
      "@services": ["src/shared/services"],
      "@constants": ["src/shared/constants"],
      "@utils": ["src/shared/utils"],
      "@transformers": ["src/shared/transformers"],
      "@guards": ["src/shared/guards"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [],
  "references": [
    {
      "path": "../../packages/orm/tsconfig.lib.json"
    },
    {
      "path": "../../packages/types/tsconfig.lib.json"
    },
    {
      "path": "../../packages/core/tsconfig.lib.json"
    },
    {
      "path": "../../packages/dto/tsconfig.lib.json"
    }
  ]
}
